baseLabel.Text = string.rep(" ", #fullText)

for i = 1, #fullText do
    local shown = fullText:sub(1, i)
    local hidden = string.rep(" ", #fullText - i)
    baseLabel.Text = shown .. hidden
    task.wait(0.05)
end

task.wait(2)

for i = 1, #fullText do
    local hidden = string.rep(" ", i)
    local shown = fullText:sub(i + 1)
    baseLabel.Text = shown .. hidden
    task.wait(0.05)
end

